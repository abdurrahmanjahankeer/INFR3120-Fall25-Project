<%- include('partials/header') %>
<%- include('partials/main_nav') %>

<article>
    <class="contact-content">
        <h2>Get In Touch With Us</h2>
        <tr>
            <td colspan="2"><hr style="border: 2px solid yellowgreen; width: 100%; opacity: 100%;"></td>
        </tr>
        <p>Have a question, project idea, or want to collaborate? Fill out the form below and we'll get back to you soon.</p>
    </class>

    <form action="mailto:abdurrahman.jahankeer@ontariotechu.net?subject=Contact Form from ADA Type Writer Website" enctype="text/plain" method="POST" name="ContactForm">
        <p>
            <label for="name"><i class="fas fa-user"></i> Name</label>
            <input type="text" id="name" name="name" placeholder="Your full name" required>
        </p>

        <p>
            <label for="email"><i class="fas fa-envelope"></i> Email</label>
            <input type="email" id="email" name="email" placeholder="your.email@example.com" required>
        </p>

        <p>
            <label for="phone"><i class="fas fa-phone"></i> Phone Number</label>
            <input type="tel" id="phone" name="phone" placeholder="1234567890" required>
        </p>

        <p>
            <label for="comments"><i class="fas fa-comment"></i> Comments</label>
            <textarea id="comments" name="comments" rows="6" placeholder="Your message here..." required></textarea>
        </p>

        <p>
            <input type="submit" class="contact-btn" value="Submit">
            <input type="reset" class="contact-btn" value="Reset">
        </p>
    </form>
</article>

<%- include('partials/footer') %>